# Google ADK Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
# Use GOOGLE_GENAI_USE_VERTEXAI=TRUE only if using Vertex AI with user API key

# OpenAI Configuration (for vision analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=postgresql://postgres:postgres@localhost:54321/postgres

# Application Configuration
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_SUPABASE_URL=$SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=$SUPABASE_ANON_KEY

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ADK Development
ADK_WEB_DEV=true  # Workaround for Chrome H2 preload issue

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Agent Configuration
DEFAULT_MODEL_ID=gemini-2.0-flash-exp
MAX_AGENT_TTL_SECONDS=300
AGENT_MEMORY_TABLE=agent_memory
AGENT_SESSION_TABLE=agent_sessions

# Feature Flags
ENABLE_VISION_ANALYSIS=true
ENABLE_CONTRACTOR_MATCHING=true
ENABLE_REAL_TIME_UPDATES=false

# Cost Control
MAX_MONTHLY_API_SPEND=100
COST_ALERT_THRESHOLD=80